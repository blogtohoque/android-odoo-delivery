<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!--TODO fix this, also make sure that their width and heights are capped and the text is wrapped-->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:columnCount="2">

        <Button
            android:id="@+id/button_deliver"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:text="@string/button_deliver" />

        <Button
            android:id="@+id/button_pickup"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:text="@string/button_pickup" />

        <Button
            android:id="@+id/button_internal_move"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:text="@string/internal" />

        <Button
            android:id="@+id/button_inventory_adjust"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:text="@string/inventory_adjust" />

        <Button
            android:id="@+id/button_stock_move"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:text="@string/stock_move" />

        <Button
            android:id="@+id/button_inventory_move"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:text="@string/inventory_move" />


    </GridLayout>
</RelativeLayout>