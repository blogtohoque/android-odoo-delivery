<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_login_splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_odoo_logo"
        android:contentDescription="@string/odoo_logo"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/dialog_login_server_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:alpha="0">

        <Spinner
            android:id="@+id/dialog_login_protocol"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <EditText
            android:id="@+id/dialog_login_url"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:hint="@string/hint_url"
            android:inputType="textUri"
            android:layout_weight="4"/>

        <EditText
            android:id="@+id/dialog_login_port"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:hint="@string/hint_port"
            android:inputType="number"
            android:text="@string/port_80"
            android:layout_weight="1"/>
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_username"
        android:alpha="0"/>

    <EditText
        android:id="@+id/dialog_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/hint_password"
        android:alpha="0"/>

    <Spinner
        android:id="@+id/dialog_login_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0">
    </Spinner>

    <LinearLayout
        android:id="@+id/dialog_login_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarButtonStyle"
        android:alpha="0">

        <Button
            android:id="@+id/dialog_login_button_login_cancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/dialog_login_button_login_ok"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
